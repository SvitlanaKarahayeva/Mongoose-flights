<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/index.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Flights</title>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <form class="form-inline">
        
          <a href="/flights"><button class="btn btn-outline-success" type="button">All Flights</button></a>
          <a href="/flights/new"><button class="btn btn-sm btn-outline-secondary" type="button">Add Flights</button></a>
        </form>
      </nav>

<div class="form-div">


<table class="table table-striped">

  <h1>FLIGHTS SCHEDULE</h1>
    <thead>
      <tr>
        <th scope="col">Airline</th>
        <th scope="col">Flight#</th>
        <th scope="col">Airport</th>
        <th scope="col">Departure</th>
      </tr>
    </thead>
    <tbody>
      
        <% flights.forEach(function (f) {%>  
         <tr>
          <td><%= f.airline %></td>
          <td> <%= f.flightNo %></td>
          <td><%= f.airport %></td>
          <td><%= f.depart %></td>
          <td> 
            <a href="/flights/<%= f.id %>"><button>Details</button></a> 
          </td>
      
        </tr>
        <% }); %>  
        
    </tbody>
  </table>
  
</body>
</html>